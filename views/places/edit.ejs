            <div class="mb-3">
                <label class="form-label" for="blogTitle">Blog Title</label>
                <input class="form-control" type="text" id="blogTitle" name="place[blogTitle]"
                    value="<%=place.blogTitle %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="publishDate">Publish Date</label>
                <input class="form-control" type="text" id="publishDate" name="place[publishDate]"
                    value="<%=place.publishDate %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="blogIntro">Blog Intro</label>
                <input class="form-control" type="text" id="blogIntro" name="place[blogIntro]"
                    value="<%=place.blogIntro %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            



            <div class="mb-3">
                <label class="form-label" for="blogP1">Blog P1</label>
                <textarea class="form-control" type="text" id="blogP1" name="place[blogP1]"
                    required><%= place.blogP1%></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="blogP2">Blog P2</label>
                <textarea class="form-control" type="text" id="blogP2" name="place[blogP2]"
                    required><%= place.blogP2%></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="blogP3">Blog P3</label>
                <textarea class="form-control" type="text" id="blogP3" name="place[blogP3]"
                    required><%= place.blogP3%></textarea>
                <div class="valid-feedback">
