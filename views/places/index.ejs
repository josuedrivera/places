<% layout('layouts/boilerplate')%>

<div id="cluster-map"></div>
<div class="container pb-5">
    <h1 class="display-4 text-center py-4">All Places</h1>

    <% for (let place of places){%>
    <div class="card my-2">
        <div class="row">
            <div class="col-lg-4">
                <%if(place.images.length) {%>
                <img class="img-fluid" alt="" src="<%=place.images[0].url%>">
                <% }else {%>
                <img class="img-fluid" alt=""
                    src="https://res.cloudinary.com/douqbebwk/image/upload/v1600103881/YelpCamp/lz8jjv2gyynjil7lswf4.png">
                <% } %>
            </div>
            <div class="col-lg-8">
                <div class="card-body">
                    <h5 class="card-title text-uppercase"><%= place.title %> </h5>
                    <p class="card-text"><%= place.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= place.location%></small>
                    </p>
                    <hr>
                    <p class="card-text font-weight-bold text-uppercase"><%= place.blogTitle %></p>
                    <p class="card-text font-weight-lighter"><%= place.publishDate %></p>
                    <a class="btn btn-primary" href="/places/<%=place._id%>">View <%=place.title%></a>
                </div>
            </div>
        </div>
    </div>
    <% }%>
